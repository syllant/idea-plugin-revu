<?xml version="1.0" encoding="iso-8859-1"?>
<!DOCTYPE idea-plugin PUBLIC
  "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2" url="http://idea-revu.googlecode.com/">
  <id>org.sylfra.idea.plugins.revu</id>
  <name>revu</name>
  <description><![CDATA[
<html>
  Team Code Reviewer for Intellij IDEA
</html>
    ]]></description>
  <tag>xml</tag>
  <version>1.1</version>
  <vendor logo="/org/sylfra/idea/plugins/revu/resources/icons/revu.png"
          email="sylfradev@yahoo.fr"
          url="http://idea-revu.googlecode.com/">Sylvain FRANCOIS
  </vendor>
  <change-notes><![CDATA[
<html>
  First public release
</html>
]]></change-notes>
  <idea-version since-build="8000"/>
  <resource-bundle>org.sylfra.idea.plugins.revu.resources.Bundle</resource-bundle>

  <application-components>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.settings.app.RevuAppSettingsComponent
      </implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.ui.forms.settings.app.RevuAppSettingsForm
      </implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.utils.VcsFetcher</implementation-class>
    </component>
  </application-components>

  <project-components>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.RevuPlugin</implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.settings.project.RevuProjectSettingsComponent
      </implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.ui.forms.settings.project.RevuProjectSettingsForm
      </implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.settings.project.workspace.RevuWorkspaceSettingsComponent
      </implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.business.ReviewManager
      </implementation-class>
    </component>
    <component>
      <interface-class>org.sylfra.idea.plugins.revu.config.IReviewExternalizer</interface-class>
      <implementation-class>org.sylfra.idea.plugins.revu.config.impl.ReviewExternalizerXmlImpl
      </implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.ui.RevuToolWindowManager
      </implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.ui.statusbar.StatusBarComponent</implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.ui.editor.RevuEditorHandler</implementation-class>
    </component>
    <component>
      <implementation-class>org.sylfra.idea.plugins.revu.business.RevuFileListener</implementation-class>
    </component>
  </project-components>

  <extensions defaultExtensionNs="com.intellij">
    <customScopesProvider implementation="org.sylfra.idea.plugins.revu.RevuScopeProvider"/>
  </extensions>

  <actions>

    <action id="revu.ShowProjectSettings"
            class="org.sylfra.idea.plugins.revu.ui.actions.ShowProjectSettingsAction"
            text="Show project settings"
            icon="/general/projectSettings.png"/>

    <!-- Review -->
    <action id="revu.ShowReviewEditForm"
            class="org.sylfra.idea.plugins.revu.ui.actions.review.ShowUpdateReviewPopupAction"
            text="Edit Review"
            icon="/actions/editSource.png"/>
    <action id="revu.SaveReview"
            class="org.sylfra.idea.plugins.revu.ui.actions.review.SaveReviewAction"
            text="Save review"
            icon="/org/sylfra/idea/plugins/revu/resources/icons/save.png"/>
    <action id="revu.CreateReview"
            class="org.sylfra.idea.plugins.revu.ui.actions.review.PrepareCreateReviewAction"
            text="Create review"
            icon="/general/add.png"/>
    <action id="revu.RemoveReview"
            class="org.sylfra.idea.plugins.revu.ui.actions.review.RemoveReviewAction"
            text="Delete review"
            icon="/general/remove.png"/>
    <action id="revu.ImportReview"
            class="org.sylfra.idea.plugins.revu.ui.actions.review.ImportReviewAction"
            text="Import review"
            icon="/org/sylfra/idea/plugins/revu/resources/icons/importReview.png"/>
    <action id="revu.ExportReview"
            class="org.sylfra.idea.plugins.revu.ui.actions.review.ExportReviewAction"
            text="Export review"
            icon="/org/sylfra/idea/plugins/revu/resources/icons/exportReview.png"/>
    <action id="revu.SplitReviewBrowsingFormHorizontally"
            class="org.sylfra.idea.plugins.revu.ui.actions.toolwindow.SplitReviewBrowsingFormHorizontallyAction"
            text="Horizontal split"
            icon="/actions/splitHorizontally.png"/>
    <action id="revu.SplitReviewBrowsingFormVertically"
            class="org.sylfra.idea.plugins.revu.ui.actions.toolwindow.SplitReviewBrowsingFormVerticallyAction"
            text="Vertical split"
            icon="/actions/splitVertically.png"/>

    <!-- Review item -->
    <action id="revu.CreateReviewItem"
            class="org.sylfra.idea.plugins.revu.ui.actions.reviewitem.CreateReviewItemAction"
            text="Add review item"
            icon="/general/add.png">
      <keyboard-shortcut first-keystroke="alt r" keymap="$default"/>
    </action>
    <action id="revu.ShowUpdateReviewItemPopup"
            class="org.sylfra.idea.plugins.revu.ui.actions.reviewitem.ShowUpdateReviewItemPopupAction"
            text="Update review item"
            icon="/org/sylfra/idea/plugins/revu/resources/icons/editReviewItem.png"/>
    <action id="revu.RemoveReviewItem"
            class="org.sylfra.idea.plugins.revu.ui.actions.reviewitem.RemoveReviewItemAction"
            text="Remove review item"
            icon="/general/remove.png"/>

    <!-- Source -->
    <action id="revu.JumpToSource"
            class="org.sylfra.idea.plugins.revu.ui.actions.toolwindow.JumpToSourceAction"
            text="Jump to Source"
            icon="/org/sylfra/idea/plugins/revu/resources/icons/jumpToSource.png">
      <keyboard-shortcut first-keystroke="F4" keymap="$default"/>
    </action>
    <action id="revu.AutoscrollToSource"
            class="org.sylfra.idea.plugins.revu.ui.actions.toolwindow.ToggleAutoscrollToSourceAction"
            text="Autoscroll to Source"
            icon="/general/autoscrollToSource.png"/>

    <!-- Editor -->
    <group id="revu.editor.popup">
      <separator/>
      <reference ref="revu.CreateReviewItem"/>
      <add-to-group group-id="EditorPopupMenu" anchor="last"/>
    </group>

    <!-- Gutter -->
    <group id="revu.reviewItemGutter.popup" popup="true">
      <reference ref="revu.ShowUpdateReviewItemPopup"/>
      <reference ref="revu.RemoveReviewItem"/>
    </group>

    <!-- Tool window -->
    <group id="revu.toolWindow.review.layout" popup="true" icon="/debugger/restoreLayout.png">
      <reference ref="revu.SplitReviewBrowsingFormHorizontally"/>
      <reference ref="revu.SplitReviewBrowsingFormVertically"/>
    </group>

    <group id="revu.toolWindow.allReviews" popup="true">
      <reference ref="revu.CreateReviewItem"/>
      <reference ref="revu.RemoveReviewItem"/>
      <separator/>
      <reference ref="PreviousOccurence"/>
      <reference ref="NextOccurence"/>
      <separator/>
      <reference ref="revu.JumpToSource"/>
      <reference ref="revu.AutoscrollToSource"/>
      <separator/>
      <reference ref="revu.toolWindow.review.layout"/>
      <separator/>
      <reference ref="revu.ShowProjectSettings"/>
    </group>

    <group id="revu.toolWindow.review" popup="true">
      <reference ref="revu.ShowReviewEditForm"/>
      <separator/>
      <reference ref="revu.CreateReviewItem"/>
      <reference ref="revu.RemoveReviewItem"/>
      <separator/>
      <reference ref="PreviousOccurence"/>
      <reference ref="NextOccurence"/>
      <separator/>
      <reference ref="revu.AutoscrollToSource"/>
      <reference ref="revu.toolWindow.review.layout"/>
    </group>

    <group id="revu.reviewItemTable.popup" popup="true">
      <reference ref="revu.JumpToSource"/>
      <separator/>
      <reference ref="revu.CreateReviewItem"/>
      <reference ref="revu.RemoveReviewItem"/>
    </group>

    <group id="revu.reviewItemForm.toolbar" popup="true">
      <reference ref="PreviousOccurence"/>
      <reference ref="NextOccurence"/>
      <separator/>
      <reference ref="revu.RemoveReviewItem"/>
      <separator/>
      <reference ref="revu.JumpToSource"/>
      <separator/>
      <reference ref="revu.SaveReview"/>
    </group>

    <!-- Settings -->
    <group id="revu.settings.project.reviews" popup="true">
      <reference ref="revu.CreateReview"/>
      <reference ref="revu.RemoveReview"/>
      <separator/>
      <reference ref="revu.ImportReview"/>
      <reference ref="revu.ExportReview"/>
    </group>

  </actions>

</idea-plugin>